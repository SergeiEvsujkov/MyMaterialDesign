<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@layout/main_fragment"
        motion:constraintSetStart="@layout/main_fragment_start"
        motion:duration="2000">

        <OnSwipe motion:targetId="@id/wiki_button"
            motion:dragDirection="dragLeft"/>
    </Transition>

    <Transition
        motion:constraintSetEnd="@layout/main_fragment_start"
        motion:constraintSetStart="@layout/main_fragment"
        motion:duration="2000">

        <OnSwipe motion:targetId="@id/input_layout"
            motion:dragDirection="dragRight"/>
    </Transition>

    <Transition
        motion:constraintSetEnd="@layout/main_fragment"
        motion:constraintSetStart="@layout/main_fragment_start"
        motion:duration="2000">

        <OnSwipe motion:targetId="@id/input_layout"
            motion:dragDirection="dragLeft"/>
    </Transition>
</MotionScene>